{
    "compilerOptions": {
        "module": "esNext",
        "moduleResolution": "node",
        "removeComments": true,
        "lib": ["es5", "es2015.promise", "dom"],
        "outDir": "build",
        "noLib": false,
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}