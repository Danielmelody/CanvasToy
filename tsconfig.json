{
    "compilerOptions":{
        "module": "amd",
        "removeComments": true,
        "lib":["es5", "es2015.promise", "dom"],
        "outFile": "build/canvas-toy-amd.js",
        "noLib": false,
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true
    },
    "include":[
        "src/**/*.ts"
    ],
    "exclude":[
        "node_modules/",
        "examples/",
        "tests/",
        "utils/"
    ],
   "compileOnSave": false
}
